@model List<TeamMember>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}


<div>
    <div class="container-fluid">
        <h1> Create:</h1>
        <a asp-action="create" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">FullName</th>
                <th scope="col">Proferssion</th>
                <th scope="col">Media</th>
                <th scope="col">Image</th>
                <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@item.FullName</td>
                    <td>@item.Profession</td>
                    <td>@item.MediaUrls</td>
                    <td> <img style="max-width:80px" src="~/uploads/teammembers/@item.ImageUrl" /></td>
                    <td><a asp-action="update" asp--route-id="@item.Id" class="btn btn-info">Update</a></td>
                    <td><a asp-action="softdelete" asp--route-id="@item.Id" class="btn btn-warning">SoftDelete</a></td>
                    <td><a asp-action="delete" asp--route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }

        </tbody>
    </table>
</div>

